{
  "name": "@zenml/zotica",
  "version": "0.0.1",
  "author": "Ziphil",
  "description": "Web rendering engine for mathematical formulae",
  "homepage": "https://github.com/Ziphil/ZenmlZotica",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "develop": "ts-node source/index.ts",
    "build": "run-s build:client build:main",
    "build:client": "webpack --config webpack-client.ts",
    "build:main": "webpack --config webpack-main.ts",
    "test": "ts-node -r tsconfig-paths/register test/generate.ts",
    "prepare": "npm run build"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts",
    "rules": {
      "no-throw-literal": "off"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "util\\.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "util\\.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/parsimmon": "^1.10.6",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@xmldom/xmldom": "^0.7.5",
    "eslint": "^8.0.1",
    "eslint-config-ziphil": "^1.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsdoc": "^36.1.1",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "sass": "^1.45.0",
    "sass-loader": "^12.4.0",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.4.4",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@zenml/zenml": "0.1.1"
  }
}
