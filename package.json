{
  "name": "@zenml/zotica",
  "version": "1.2.0",
  "author": "Ziphil",
  "description": "Web rendering engine for mathematical formulae",
  "homepage": "https://github.com/Ziphil/ZenmlZotica",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "develop": "ts-node source/index.ts",
    "build": "run-s build:client build:main",
    "build:client": "webpack --config webpack-client.ts",
    "build:main": "webpack --config webpack-main.ts",
    "test": "ts-node -r tsconfig-paths/register test/generate.ts",
    "lint": "eslint --ext .ts source test",
    "lint:fix": "eslint --fix --ext .ts source test",
    "prepare": "npm run build"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts",
    "rules": {
      "no-throw-literal": "off"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/test/**/*.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "util\\.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "util\\.ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/parsimmon": "^1.10.6",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@xmldom/xmldom": "^0.7.5",
    "eslint": "^8.17.0",
    "eslint-config-ziphil": "^1.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.4.7",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "sass": "^1.48.0",
    "sass-loader": "^12.4.0",
    "ts-dedent": "^2.2.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.4",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "@zenml/zenml": "^1.3.0"
  }
}
